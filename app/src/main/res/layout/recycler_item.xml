<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
        style="@style/TemperatureTextStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/forecastTemperatureTextView"/>

    <TextView
        style="@style/OtherTextStyle"
        android:id="@+id/forecastCityTextView"
        android:layout_below="@+id/forecastTemperatureTextView"/>

    <TextView
        style="@style/OtherTextStyle"
        android:id="@+id/forecastWeatherDescriptionTextView"
        android:layout_below="@+id/forecastCityTextView"/>

    <TextView
        style="@style/OtherTextStyle"
        android:id="@+id/forecastDataTextView"
        android:layout_below="@+id/forecastWeatherDescriptionTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/forecastImageView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/forecastTemperatureTextView"
        android:layout_toEndOf="@+id/forecastTemperatureTextView"
        android:layout_marginLeft="20dp"
        tools:ignore="RtlHardcoded"
        android:contentDescription=""/>

</RelativeLayout>