<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/image_forecast_weather"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        tools:ignore="RtlHardcoded"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/OtherTextStyle"
        android:id="@+id/text_forecast_date"
        android:text="Дата"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/image_forecast_weather"
        android:layout_toEndOf="@+id/image_forecast_weather"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        style="@style/OtherTextStyle"
        android:id="@+id/text_forecast_weather_description"
        android:text="@string/text_description"
        android:layout_below="@id/text_forecast_date"
        android:layout_alignLeft="@+id/text_forecast_date"
        android:layout_alignStart="@+id/text_forecast_date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_forecast_temperature"
        android:id="@+id/text_forecast_temperature"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>