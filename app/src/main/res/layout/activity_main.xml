<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teaching.jelus.myweatherview.MainActivity">

    <TextView
        style="@style/TemperatureTextStyle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/temperatureTextView"/>

    <TextView
        style="@style/OtherTextStyle"
        android:id="@+id/cityTextView"
        android:layout_below="@+id/temperatureTextView"/>

    <TextView
        style="@style/OtherTextStyle"
        android:id="@+id/weatherTextView"
        android:layout_below="@+id/cityTextView"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="?android:attr/windowBackground"
        android:id="@+id/weatherIconImageView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/temperatureTextView"
        android:layout_toEndOf="@+id/temperatureTextView"
        android:layout_marginLeft="20dp"/>


</RelativeLayout>
